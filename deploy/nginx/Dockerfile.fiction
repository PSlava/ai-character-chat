# Stage 1: Build fiction frontend
FROM node:20-alpine AS build

WORKDIR /app
COPY frontend-fiction/package.json frontend-fiction/package-lock.json* ./
RUN npm install
COPY frontend-fiction/ .
RUN npm run build

# Stage 2: Serve with Nginx
FROM nginx:alpine

RUN apk add --no-cache curl

ARG NGINX_CONF=nginx-ssl-fiction.conf

# Remove default config and add ours
RUN rm /etc/nginx/conf.d/default.conf
COPY deploy/nginx/${NGINX_CONF} /etc/nginx/conf.d/default.conf

# Copy built frontend
COPY --from=build /app/dist /usr/share/nginx/html

EXPOSE 80 443
